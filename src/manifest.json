{
  "manifest_version": 2,
  "name": "Labels",
  "version": "1.0",
  "description": "A simple Chrome extension.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "downloads"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}